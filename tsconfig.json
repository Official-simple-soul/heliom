{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/(auth)/signup/components/RoleSelection.jsx"
, "src/app/(account)/devices/register_device/components/InstallationDetails.jsx", "src/app/(account)/devices/register_device/components/MeterDetails.jsx", "src/app/(account)/devices/register_device/components/RegulatoryCompliance.jsx", "src/app/(account)/devices/register_device/components/TechnicalSpecifications.jsx", "src/app/(auth)/signup/components/SignUp.jsx"  ],
  "exclude": ["node_modules"]
}
